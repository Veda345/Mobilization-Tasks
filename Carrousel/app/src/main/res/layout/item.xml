<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_gravity="center"
            android:padding="@dimen/icon_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/folder"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/icon_padding"
            android:paddingRight="@dimen/icon_padding"
            android:paddingTop="@dimen/icon_padding"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/title_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingBottom="@dimen/icon_padding"
                android:paddingRight="@dimen/icon_padding"
                android:paddingTop="@dimen/icon_padding"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:typeface="sans"
                android:visibility="visible"
                android:text="foldername"/>

            <TextView
                android:id="@+id/info_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="10sp"
                android:typeface="sans"
                android:text="info"
                android:layout_gravity="left|bottom" />

            <TextView
                android:id="@+id/title_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_gravity="center_horizontal|top"
                android:textSize="12sp"
                android:typeface="sans"
                android:text="filename"/>
        </FrameLayout>



    </LinearLayout>

